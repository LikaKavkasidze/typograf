{
  "name": "typograf",
  "description": "The client and server typography",
  "version": "6.15.1",
  "author": {
    "name": "Denis Seleznev",
    "email": "hcodes@yandex.ru",
    "url": "https://github.com/typograf/typograf"
  },
  "main": "dist/typograf.js",
  "module": "dist/typograf.es.mjs",
  "exports": {
    "require": "./dist/typograf.js",
    "import": "./dist/typograf.es.mjs"
  },
  "homepage": "https://github.com/typograf",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/typograf/typograf.git"
  },
  "keywords": [
    "typo",
    "text",
    "typograf",
    "typographer",
    "typography"
  ],
  "engines": {
    "node": ">= 4"
  },
  "files": [
    "dist",
    "docs",
    "bin",
    "LICENSE",
    "typograf.d.ts"
  ],
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@rollup/plugin-babel": "^6.0.3",
    "cpy-cli": "^4.2.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.31.0",
    "gulp": "^4.0.2",
    "jest": "^29.3.1",
    "plugin-error": "^1.0.1",
    "postcss": "^8.4.20",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-import-ext-glob": "^2.1.1",
    "rollup": "^3.9.1",
    "sort-keys": "^4.2.0",
    "through": "^2.3.8",
    "uglify-js": "^3.17.4",
    "vinyl": "^2.2.1"
  },
  "scripts": {
    "prepare": "npm run dist",
    "clean": "del-cli dist/* build/*",
    "benchmark": "node benchmark/test.js",
    "build": "npm run clean && npm run build:css && npm run build:json-groups && npm run build:js && gulp && npm run build:alljs && npm run build:version && npm run build:copyright",
    "build:js": "rollup --config rollup.config.mjs",
    "build:version": "node tools/version.mjs build/typograf.js build/typograf.es.mjs build/typograf.all.js",
    "build:copyright": "node tools/copyright.mjs build/typograf.js build/typograf.es.mjs build/typograf.all.js",
    "build:alljs": "rollup --config rollup.config.all.mjs",
    "build:css": "postcss --no-map src/typograf.css -o ../build/typograf.css",
    "build:json-groups": "cpy --rename=typograf.{{basename}} --flat src/groups.json build/ && node tools/jsonGroups.mjs",
    "minimize:js": "uglifyjs -c -m --comments '/^!/' -O ascii_only ./build/typograf.js -o ./build/typograf.min.js",
    "minimize:alljs": "uglifyjs -c -m --comments '/^!/' -O ascii_only ./build/typograf.all.js -o ./build/typograf.all.min.js",
    "dist": "npm run build && npm run minimize:js && npm run minimize:alljs && npm run dist:copy",
    "dist:copy": "cpy 'build/typograf.*' dist/",
    "test": "npm run build && npm run eslint && npm run unit-test",
    "eslint": "eslint .",
    "unit-test": "jest ."
  },
  "typings": "./typograf.d.ts"
}
